{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    // "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}

